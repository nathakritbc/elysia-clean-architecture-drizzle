# Application Configuration
NODE_ENV=development
DEFAULT_TIME_ZONE=Asia/Bangkok
HOST=localhost
PORT=7000

# Database Configuration
DATABASE_URL="postgresql://postgres:12345678@localhost:5432/elysia_db"

# Logging Configuration
LOG_LEVEL=debug
PRETTY_LOG=true

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ISSUER=elysia-app
JWT_AUDIENCE=your-app-audience
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Refresh Token Cookie Configuration
REFRESH_TOKEN_COOKIE_NAME=refresh_token
REFRESH_TOKEN_COOKIE_PATH=/
REFRESH_TOKEN_COOKIE_DOMAIN=
REFRESH_TOKEN_COOKIE_SAME_SITE=lax
REFRESH_TOKEN_COOKIE_SECURE=false

# Refresh Token CSRF Cookie Configuration
REFRESH_TOKEN_CSRF_COOKIE_NAME=refresh_token_csrf
REFRESH_TOKEN_CSRF_COOKIE_PATH=/
REFRESH_TOKEN_CSRF_COOKIE_DOMAIN=
REFRESH_TOKEN_CSRF_COOKIE_SAME_SITE=lax
REFRESH_TOKEN_CSRF_COOKIE_SECURE=false

# Argon2 Password Hashing Configuration
ARGON2_MEMORY_COST=19456
ARGON2_TIME_COST=2
ARGON2_PARALLELISM=1

# OpenTelemetry Configuration
OTEL_ENABLED=false
OTEL_SERVICE_NAME=elysia-clean-architecture
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces

# OTLP Configuration
OTLP_EXPORTER_URL=http://localhost
SERVICE_NAME=elysia-clean-architecture
NODE_NAME=local-node
POD_NAME=local-pod
POD_NAMESPACE=default
VERSION=1.0.0

# Legacy/Deprecated (for backward compatibility)
ACCESS_KEY_TOKEN=accessToken
JWT_EXPIRES_IN=1d